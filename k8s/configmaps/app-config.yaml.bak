apiVersion: v1
kind: ConfigMap
metadata:
  name: dhakacart-config
  namespace: dhakacart
data:
  # Backend configuration
  NODE_ENV: "production"
  PORT: "5000"
  DB_HOST: "dhakacart-db-service"
  DB_PORT: "5432"
  DB_NAME: "dhakacart_db"
  REDIS_HOST: "dhakacart-redis-service"
  REDIS_PORT: "6379"
  
  # Frontend configuration
  # Using Load Balancer URL for backend API access (browser can access this)
  # IMPORTANT: Update this URL when Load Balancer changes in LAB practice
  # Use: ./update-configmap-with-lb.sh YOUR_LB_URL
  REACT_APP_API_URL: "http://dhakacart-k8s-alb-1190423189.ap-southeast-1.elb.amazonaws.com/api"
